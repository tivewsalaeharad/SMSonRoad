<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" />
    </item>
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <padding
            android:bottom="@dimen/itemPadding"
            android:left="0dp"
            android:right="@dimen/itemPadding"
            android:top="@dimen/itemPadding" />
            <stroke
                android:width="1dp"
                android:color="@color/colorGrey"
                android:dashGap="1px"
                android:dashWidth="1px" />
        </shape>
    </item>

</layer-list>